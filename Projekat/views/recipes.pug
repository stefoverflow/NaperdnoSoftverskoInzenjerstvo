extends layout

block content 
  h1 #{title}
  ui.list-group 
    for recipe in recipes 
      li.list-group-item
        .d-flex.justify-content-md-between.align-items-md-center
          a(href=`/recipes/${recipe.id}`)=recipe.name
          a.btn.btn-danger.delete-recipe(href=`` data-id=recipe.id) Delete
      hr
    